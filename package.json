{
  "name": "stalker",
  "private": true,
  "scripts": {
    "dev": "concurrently -n web,sched -c blue,green \"pnpm --filter web dev\" \"pnpm --filter @stalker/scheduler start\"",
    "build": "pnpm --filter web build",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "db:push": "pnpm --filter web exec prisma db push",
    "db:generate": "pnpm --filter web exec prisma generate"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.3",
    "vitest": "~3.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild",
      "sharp"
    ]
  }
}
